<!DOCTYPE html>
<html>
<% include partials/head %>

<body>

  <% include partials/nav %>


  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>

      <div class="row">
        <div class="col s12 light header header-border">
          <h4><%= assassin[0].full_name %>

            <% if (codename[0].code_name) { %>

            (<%= codename[0].code_name %>)
            <% } %> Added!
          </h4>
        </div>
      </div>

      <!-- image for new assassin added -->
      <div class="row header">
        <div class="col s4 light">
          <img src="<%= assassin[0].assassin_photo %>" class="responsive-img">
        </div>
        <!--new assassin added-->
        <div class="col s6 light">
          <table class="header bordered">
            <tr>
              <td><b>Rating:</b>&nbsp;&nbsp;&nbsp;
                <%= assassin[0].rating %>
              </td>
              <td><b>Kills:</b>&nbsp;&nbsp;&nbsp;
                <%= assassin[0].kills %>
              </td>
            </tr>
            <tr>
              <td><b>Price:</b>&nbsp;&nbsp;&nbsp;
                <%= assassin[0].price %>
              </td>
              <td><b>Age:</b>&nbsp;&nbsp;&nbsp;
                <%= assassin[0].age %>
              </td>
            </tr>
            <tr>
              <td colspan="2"><b>Weapon:</b>&nbsp;&nbsp;&nbsp;
                <%= assassin[0].weapon %>
              </td>
            </tr>
            <tr>
              <td colspan="2"><b>Contact:</b>&nbsp;&nbsp;&nbsp;
                <%= assassin[0].contact_info %>
              </td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row header center-align">
        <div class="col s12 light">

          <a href="/assassins"><button type="button" class="btn waves-effect waves-light">Back to Assassins</button></a>
        </div>
      </div>
    </div>
  </div>

  <br><br>



<% include partials/footer %>

</body>

</html>
