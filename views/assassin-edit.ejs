<!DOCTYPE html>
<html>
<% include partials/head %>

  <body>

    <% include partials/nav %>


      <div class="section no-pad-bot" id="index-banner">
        <div class="container">
          <br><br>

          <div class="row header header-border">
            <div class="col s12 light">
              <h4>Edit Assassin</h4>
            </div>
          </div>

          <div class="row">
            <div class="col s3 light">
              <img src="<%= results[0].assassin_photo %>" class="responsive-img">
            </div>

            <!--edit assassin form-->
            <div class="col s9 light">
              <form action="/assassins/<%= results[0].id %>/updated" method="post">

                <div class="row">
                  <div class="input-field col s7">
                    <input id="name" type="text" name="full_name" value="<%= results[0].full_name %>">
                    <label for="name">Name</label>
                  </div>

                  <div class="input-field col s2">
                    <input id="age" type="number" name="age" value="<%= results[0].age %>">
                    <label for="age">Age</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s7">
                    <input id="codename" type="text" name="code_name" value="<%= results[0].code_name %>">
                    <label for="codename">Codename</label>
                  </div>

                  <div class="input-field col s2">
                    <input id="price" type="number" name="price" value="<%= results[0].price %>">
                    <label for="price">Price</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s7">
                    <input id="assassin_photo" type="url" name="assassin_photo" value="<%= results[0].assassin_photo %>">
                    <label for="assassin_photo">Profile Image URL</label>
                  </div>

                  <div class="input-field col s2">
                    <input id="rating" type="number" name="rating" value="<%= results[0].rating %>">
                    <label for="rating">Rating</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s7">
                    <input id="weapon" type="text" name="weapon" value="<%= results[0].weapon %>">
                    <label for="weapon">Weapon of Choice</label>
                  </div>

                  <div class="input-field col s2">
                    <input id="kills" type="number" name="kills" value="<%= results[0].kills %>">
                    <label for="kills">Kills</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s7">
                    <input id="contact" type="email" name="contact_info" value="<%= results[0].contact_info %>">
                    <label for="contact">Contact Info</label>
                  </div>
                </div>
                
                <div class="row header">
                  <div class="col s9 light">
                    <button class="btn waves-effect waves-light" type="submit" name="add">Edit Assassin</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>




      </div>





      <br><br>

      <% include partials/footer %>
